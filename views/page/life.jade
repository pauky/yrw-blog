extends ../common/layout
block title
  title 生活杂记 | 行之足
block head
  meta(name="keywords", content="杨润炜的生活杂记, 行之足")
  meta(name="description", content="品尝生活，享受乐趣")
  link(rel="stylesheet",href="#{staticDomain}/css/index.css")
block body
  .container
    .header
      +topBar('life')
    .body
      //- banner
      +banner('品尝生活，享受乐趣')
      .main-wrapper.ui.grid
        .wrapper-left.twelve.wide.column
          //- articles list
          +articlesList(articles)
          +syncPaging(
          pageNum,
          Math.ceil(articles.total/pageSize),
          pageSize,
          portalUrl + "/life/pageNum-pageSize",
          9)

        .wrapper-right.four.wide.column
          //- side
          .index-side
            if _.size(hotArticles)
              .hot-articles
                .title.t-c 热门文章(生活)
                ul.hot-articles-list
                  each art in hotArticles
                    li.item-art
                      a.link(href=portalUrl+'/a/'+art.order+'.html') #{art.title}
    .footer
      +footer()
block scripts
  script(src=staticDomain+"/js/index.js")
                                       